# EditorConfig configuration
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# JavaScript/TypeScript
[*.{js,jsx,ts,tsx}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
insert_final_newline = true

# Shell scripts
[*.{sh,bash,zsh}]
indent_size = 4

# Docker files
[Dockerfile*]
indent_size = 4

# Makefile
[Makefile]
indent_style = tab

# Python files
[*.py]
indent_size = 4

# Go files
[*.go]
indent_style = tab
tab_width = 4