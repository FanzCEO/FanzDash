# FANZ Staging Environment
NODE_ENV=staging
PORT=5000

# Database
DATABASE_URL=postgresql://staging-db:5432/fanzdash_staging
POSTGRES_DB=fanzdash_staging
POSTGRES_USER=fanzdash_staging
POSTGRES_PASSWORD=${POSTGRES_STAGING_PASSWORD}

# AI Services
OPENAI_API_KEY=${OPENAI_API_KEY_STAGING}
OPENAI_MODEL=gpt-4o
ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY_STAGING}

# Media & Storage
AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_STAGING}
AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY_STAGING}
S3_BUCKET=fanzdash-staging-media
CLOUDFLARE_R2_ENDPOINT=${R2_ENDPOINT_STAGING}
CLOUDFLARE_R2_ACCESS_KEY=${R2_ACCESS_KEY_STAGING}
CLOUDFLARE_R2_SECRET_KEY=${R2_SECRET_KEY_STAGING}

# Authentication & Security
JWT_SECRET=${JWT_SECRET_STAGING}
SESSION_SECRET=${SESSION_SECRET_STAGING}
ENCRYPTION_KEY=${ENCRYPTION_KEY_STAGING}

# Payment Gateways (Staging)
CCBILL_CLIENT_ID=${CCBILL_CLIENT_ID_STAGING}
CCBILL_CLIENT_SECRET=${CCBILL_CLIENT_SECRET_STAGING}
SEGPAY_API_KEY=${SEGPAY_API_KEY_STAGING}
EPOCH_API_KEY=${EPOCH_API_KEY_STAGING}

# Observability
OTEL_SERVICE_NAME=fanzdash-staging
OTEL_EXPORTER_OTLP_ENDPOINT=${OTEL_ENDPOINT_STAGING}
LOG_LEVEL=info

# Feature Flags
ENABLE_DEBUG_UI=false
ENABLE_MOCK_PAYMENTS=false
ENABLE_AI_PLAYGROUND=true
ENABLE_BETA_FEATURES=true